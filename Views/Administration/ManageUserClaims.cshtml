@model List<UserClaimsViewModel>

@{
    var userId = ViewBag.userId;
}

<form asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@userId" method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++) 
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].ClaimType">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input">
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer text-muted">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto">
            <a asp-controller="Administration" asp-action="EditUser" asp-route-Id="@userId" class="btn btn-primary" style="width:auto">
                Cancel
            </a>
        </div>
    </div>
</form>